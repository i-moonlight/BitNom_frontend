{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module",
    "parser": "babel/eslint-parser"
  },
  "plugins": ["react"],
  "rules": {
    "template-curly-spacing": "off",
    "indent": [
      "warn",
      2,
      {
        "ignoredNodes": ["TemplateLiteral"],
        "SwitchCase": 1
      }
    ],
    "no-unused-vars": "warn",
    "quotes": ["warn", "single", { "allowTemplateLiterals": true }],
    "react/prop-types": 0,
    "semi": ["error", "always"]
  }
}
